<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/input_border"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:backgroundTint="@color/cardview_shadow_start_color">

    <TextView
        android:id="@+id/txtDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Monday"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
       />

    <TextView
        android:id="@+id/txtExercise1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arm Exercise"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTime1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="From 6:00 AM to 6:30 AM"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtExercise2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thigh Exercise"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTime2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="From 6:30 AM to 7:00 AM"
        android:textSize="19dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/teal_700"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Delete"
        android:textSize="23dp" />

</LinearLayout>